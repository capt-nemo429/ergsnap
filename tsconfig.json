{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "target": "ES2020",
    "baseUrl": ".",
  },
  "exclude": ["**/node_modules", "**/dist"]
}
